{
  "compilerOptions": {
	"baseUrl": "./",
	"experimentalDecorators": true,
	"target": "es2017",
	"module": "ESNext",
	"lib": ["dom", "esnext"],
	"moduleResolution": "node",
	"sourceMap": false,
	"declaration": true,
	"outDir": "./dist",
	"strict": true,
	"allowSyntheticDefaultImports": true,
	"noImplicitAny": false,
	"jsx": "react",

	// "allowJs": true,
	// "skipLibCheck": true,
	// "esModuleInterop": true,
	// "forceConsistentCasingInFileNames": true,
	// "resolveJsonModule": true,
	// "isolatedModules": true,
	// "noEmit": true,

	"paths": {
		"@src": ["src"],
		"@src/*": ["src/*"],
		"@components": ["src/components"],
		"@components/*": ["src/components/*"],
		"@stores": ["src/stores"],
		"@stores/*": ["src/stores/*"],
		"@utils": ["src/utils"],
		"@utils/*": ["src/utils/*"]
	}
  },
  "include": [
	"src"
  ],
  "exclude": [
	"node_modules",
	"dist"
  ]
}
